server {
  listen 80 default_server;
  client_max_body_size <%= @upload_limit %>;
  server_name _;

  location = /favicon.ico {
    access_log off;
    log_not_found off;
  }
  location /static/ {
    root <%= @app_folder %>;
  }

  location / {
    include uwsgi_params;
    uwsgi_pass unix:<%= @app_socket %>;
  }
}
